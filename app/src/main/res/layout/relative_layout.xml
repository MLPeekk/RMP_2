<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Левый\nверхний\nугол"
        android:textSize="30sp"
        android:id="@+id/text_top_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Правый\nверхний\nугол"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Левый\nнижний\nугол"
        android:textSize="30sp"
        android:id="@+id/text_left_down"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Правый\nнижний\nугол"
        android:textSize="30sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Вернуться к старому активити"
        android:textSize="20sp"
        android:backgroundTint="@color/red"
        android:textColor="@color/black"
        android:id="@+id/button_1"
        android:onClick="onClick1"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/text_left_down"
        android:layout_above="@id/text_left_down"
        android:src="@drawable/cat"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/text_top_left"
        android:layout_toRightOf="@id/text_top_left"
        android:inputType="text"
        android:background="@color/gray"
        android:text="можно редактировать"/>

</RelativeLayout>